<h1>항공편 정보 갱신</h1>

<table>
  <tr>
    <td>Flight_number</td>
    <td>Leg_number</td>
    <td>Date</td>
    <td>Number_of_available_seats</td>
    <td>Airplane_id</td>
    <td>Departure_airport_code</td>
    <td>Departure_time</td>
    <td>Arrival_airport_code</td>
    <td>Arrival_time</td>
  </tr>
    {{#each adminFlightleg_res}}
    <form method="post" action='/update/adminFlightleg'>
    <tr>
      <td>{{Flight_number}}</td>
      <td>{{Leg_number}}</td>
      <td>{{Date}}</td>
      <td><input type="text" name="number_of_available_seats" placeholder={{Number_of_available_seats}}></td>
      <td>{{Airplane_id}}</td>
      <td>{{Departure_airport_code}}</td>
      <td>{{Departure_time}}</td>
      <td>{{Arrival_airport_code}}</td>
      <td>{{Arrival_time}}</td>
      <td><input type="submit" value="수정"></td>
    </tr>
    </form>
    {{/each}}
</table>