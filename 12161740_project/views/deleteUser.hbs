<h1>예약 취소</h1>

<table>
  <tr>
    <td>Flight_number</td>
    <td>Leg_number</td>
    <td>Date</td>
    <td>Seat_number</td>
    <td>Customer_name</td>
    <td>Customer_phone</td>
  </tr>
  {{#each user}}
    <form method="post">
      <tr>
        <td>{{Flight_number}}</td>
        <td>{{Leg_number}}</td>
        <td>{{Date}}</td>
        <td>{{Seat_number}}</td>
        <td>{{Customer_name}}</td>
        <td>{{Customer_phone}}</td>
        <td style="border: none; margin-left: 10px;">
          <button 
            style="margin-left: 10px;"
            type="submit" 
            name="seat_number"
            value={{Seat_number}} 
            formaction="/delete/user">
          삭제
          </button>
        </td>
      </tr>    
    </form>
  {{/each}}
</table>